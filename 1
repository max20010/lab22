#include "stdafx.h"
#include <iostream>
#include <fstream>
#include <string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	string c;
	ifstream file("C:\\Users\\Максим\\Desktop\\file.txt");
	string str,str1;
	bool ch=false;
	int x;
	while (getline(file, c)) {
		x = c.size();
		str1.resize(x, ' ');
		for (int i = 0,j=0;i < x;i++) {
			if (ch) {
				str1[j] = c[i];
				j++;
			}
			if (c[i] == ' '&& !ch ) {
				ch = true;
			}
		}
		cout << str1 << endl;
	}
}
